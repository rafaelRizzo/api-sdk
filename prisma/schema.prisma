generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  REVENDOR
  ADMIN
}

enum Status {
  ACTIVE
  BLOOCKED
  DISABLED
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String?
  password    String?
  token       String?
  role        Role     @default(USER)
  status      Status   @default(ACTIVE)
  last_update DateTime @default(now())
  created_at  DateTime @default(now())
}
